sudo a2dismod php*; sudo a2enmod php7.4; sudo update-alternatives --set php /usr/bin/php7.4 && sudo update-alternatives --set phar /usr/bin/phar7.4 && sudo update-alternatives --set phar.phar /usr/bin/phar.phar7.4 && sudo update-alternatives --set phpize /usr/bin/phpize7.4 && sudo update-alternatives --set php-config /usr/bin/php-config7.4
